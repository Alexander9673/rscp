<html>
    <style>
        .login-button {
            font-family: 'Courier New', Courier, monospace;
            padding: 12px 28px;
            background-color: white;
            color: black;
            text-decoration: none;
            font-size: 30px;
            border-radius: 3px;
            border: 2px solid #0d90c4;
            cursor: pointer;
            transition: .5s;
        }
        .login-button:hover {
            background-color: #57cfff;
            color: white;
        }

        .login-form {
            font-family: 'Courier New', Courier, monospace;
            font-size: 30px;
            text-align: center;
        }

        .login-input {
            font-family: 'Courier New', Courier, monospace;
            font-size: 30px;
            border-top: none;
            border-right: none;
            border-left: none;
            text-align: center;
            transition: .5s;
            border-bottom-color: grey;
        }

        .login-input:hover, .login-input:focus {
            padding: 5px 5px;
            text-align: center;
            transition: .5s;
            outline: none;
            background-color: rgb(206, 206, 206);
            color: white;
        }

        .head_msg {
            font-family: 'Courier New', Courier, monospace;
            text-align: center;
        }
    </style>
    <body>
        {{#if flash_msg}}
        <h2 class="head_msg">{{flash_msg}}</h2>
        {{/if}}

        {{#if account}}
        <h2 class="head_msg">Currently logged in as {{account}}</h2>
        {{/if}}
        <form class="login-form" action="/auth" method="POST">
            <h1>Login Page</h1>
            <input class="login-input" name="userid" placeholder="Username" required>
            <br />
            <br />
            <input class="login-input" name="user_pass" placeholder="Password" type="password" required>
            <br />
            <br />
            <button class="login-button" type="submit">Login</button>
        </form>
    </body>
</html>